{% extends 'base.html.twig' %}

{% block body %}
<h1 class="text-center">Mes disponibilités</h1>
<div class="mt-4 row justify-content-center">
    <div class="mx-1 p-5 col-md-6 bg-light rounded">
        <form action="{{ path('app_preference_create') }}" method="post">
            <div class="row">
                <div class="mx-auto col-md-12">
                    <p>Je veux renseigner une...</p>
                </div>
            </div>
            <div class="row">
                <div class="mx-auto col-md-12">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="js-preference-btn btn btn-success btn-block p-4" id="js-preference-btn">
                                <input type="radio" 
                                    name="preference_state" 
                                    value="availability" 
                                    hidden="hidden"
                                >
                                <span>Disponibilité</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="js-preference-btn btn btn-danger btn-block p-4" id="js-unavailability-btn">
                                <input type="radio" 
                                    name="preference_state" 
                                    value="unavailability" 
                                    hidden="hidden"
                                >
                                <span>Indisponibilité</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="mt-4 row">
                <div class="mx-auto col-md-12">
                    <p>Choissisez les jours de la semaine :</p>
                </div>
            </div>
            <div class="row">
                <div class="mx-auto col-md-12 d-flex">
                    <button 
                        type="button" 
                        style="height: 75px" 
                        class="js-preference-onclick-undisable js-preference-weekday-btn  m-1 w-100 rounded d-flex align-items-center justify-content-center btn btn-dark text-uppercase" 
                        id="js-preference-weekday-btn-1" 
                        disabled="disabled"
                    >
                        <input 
                            type="checkbox" 
                            name="preference_weekday_monday" 
                            value="true" 
                            hidden="hidden"
                        />
                        <span>Lun</span>
                    </button>
                    <button 
                        type="button" 
                        style="height: 75px" 
                        class="js-preference-onclick-undisable js-preference-weekday-btn  m-1 w-100 rounded d-flex align-items-center justify-content-center btn btn-dark text-uppercase" 
                        id="js-preference-weekday-btn-2" 
                        disabled="disabled"
                    >
                        <input 
                            type="checkbox" 
                            name="preference_weekday_tuesday" 
                            value="true" 
                            hidden="hidden"
                        />
                        <span>Mar</span>
                    </button>
                    <button 
                        type="button" 
                        style="height: 75px" 
                        class="js-preference-onclick-undisable js-preference-weekday-btn  m-1 w-100 rounded d-flex align-items-center justify-content-center btn btn-dark text-uppercase" 
                        id="js-preference-weekday-btn-3" 
                        disabled="disabled"
                    >
                        <input 
                            type="checkbox" 
                            name="preference_weekday_wednesday" 
                            value="true" 
                            hidden="hidden"
                        />
                        <span>Mer</span>
                    </button>
                    <button 
                        type="button" 
                        style="height: 75px" 
                        class="js-preference-onclick-undisable js-preference-weekday-btn  m-1 w-100 rounded d-flex align-items-center justify-content-center btn btn-dark text-uppercase" 
                        id="js-preference-weekday-btn-4" 
                        disabled="disabled"
                    >
                        <input 
                            type="checkbox" 
                            name="preference_weekday_thursday" 
                            value="true" 
                            hidden="hidden"
                        />
                        <span>Jeu</span>
                    </button>
                    <button 
                        type="button" 
                        style="height: 75px" 
                        class="js-preference-onclick-undisable js-preference-weekday-btn  m-1 w-100 rounded d-flex align-items-center justify-content-center btn btn-dark text-uppercase" 
                        id="js-preference-weekday-btn-5" 
                        disabled="disabled"
                    >
                        <input 
                            type="checkbox" 
                            name="preference_weekday_friday" 
                            value="true" 
                            hidden="hidden"
                        />
                        <span>Ven</span>
                    </button>
                </div>
            </div>
            <div class="row">
                <div class="mx-auto col-md-12 d-flex">
                    <button 
                        type="button" 
                        class="js-preference-onclick-undisable js-preference-weekday-btn mt-2 w-100 rounded d-flex align-items-center justify-content-center btn btn-dark" 
                        id="js-preference-weekday-btn-all" 
                        disabled="disabled"
                    >
                        <span>Tous les jours</span>
                    </button>
                </div>
            </div>
            <div class="row">
                <div class="mx-auto col-md-12 d-flex">
                    <button 
                        type="button" 
                        class="js-preference-onclick-undisable js-preference-weekday-btn mt-2 w-100 rounded d-flex align-items-center justify-content-center btn btn-dark" 
                        id="js-preference-weekday-btn-specific" 
                        disabled="disabled"
                    >
                        <input 
                            type="checkbox" 
                            name="preference_weekday_specific" 
                            value="true" 
                            hidden="hidden"
                        >
                        <span>Un jour ou un période spécifique</span>
                    </button>
                </div>
            </div>


            <div class="mt-4 row">
                <div class="mx-auto col-md-12">
                    <p>Choisissez vos horaires :</p>
                    <p class="text-muted">Si vos disponibilités horaires changent en fonction du jour de la semaine, créez des préférences séparées pour chaque jour de la semaine dont les horaires sont différents.</p>
                    <p class="text-muted">Par exemple : J'enregistre une préférence pour tous les lundis de 9h30 à 15h00, et ensuite je crée une autre pour tous les mercredis de 16h30 à 18h00.</p>
                </div>
            </div>
            <div class="row">
                <div class="mx-auto col-md-12">
                    <div class="row">
                        <div class="col-md-6">
                            <button 
                                type="button" 
                                class="js-preference-onclick-undisable btn btn-dark btn-block js-preference-time-btn" 
                                id="js-preference-time-btn-1" 
                                disabled="disabled"
                            >
                                <input 
                                    type="checkbox" 
                                    name="preference_time_1" 
                                    value="true"
                                    hidden="hidden"
                                />
                                <span>8h00 - 9h30</span>
                            </button>
                            <button 
                                type="button" 
                                class="js-preference-onclick-undisable btn btn-dark btn-block js-preference-time-btn" 
                                id="js-preference-time-btn-2" 
                                disabled="disabled"
                            >
                                <input 
                                    type="checkbox" 
                                    name="preference_time_2" 
                                    value="true"
                                    hidden="hidden"
                                />
                                <span>9h30 - 11h00</span>
                            </button>
                            <button 
                                type="button" 
                                class="js-preference-onclick-undisable btn btn-dark btn-block js-preference-time-btn" 
                                id="js-preference-time-btn-3" 
                                disabled="disabled"
                            >
                                <input 
                                    type="checkbox" 
                                    name="preference_time_3" 
                                    value="true"
                                    hidden="hidden"
                                />
                                <span>11h00 - 12:30</span>
                            </button>
                        </div>
                        <div class="col-md-6">
                            <button 
                                type="button" 
                                class="js-preference-onclick-undisable btn btn-dark btn-block js-preference-time-btn" 
                                id="js-preference-time-btn-4" 
                                disabled="disabled"
                            >
                                <input 
                                    type="checkbox" 
                                    name="preference_time_4" 
                                    value="true"
                                    hidden="hidden"
                                />
                                <span>13h30 - 15h00</span>
                            </button>
                            <button 
                                type="button" 
                                class="js-preference-onclick-undisable btn btn-dark btn-block js-preference-time-btn" 
                                id="js-preference-time-btn-5" 
                                disabled="disabled"
                            >
                                <input 
                                    type="checkbox" 
                                    name="preference_time_5" 
                                    value="true"
                                    hidden="hidden"
                                />
                                <span>15h00 - 16:30</span>
                            </button>
                            <button 
                                type="button" 
                                class="js-preference-onclick-undisable btn btn-dark btn-block js-preference-time-btn" 
                                id="js-preference-time-btn-6" 
                                disabled="disabled"
                            >
                                <input 
                                    type="checkbox" 
                                    name="preference_time_6" 
                                    value="true"
                                    hidden="hidden"
                                />
                                <span>16h30 - 18h00</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="mx-auto col-md-12 d-flex">
                    <button 
                        type="button" 
                        class="js-preference-onclick-undisable mt-2 w-100 rounded d-flex align-items-center justify-content-center btn btn-dark js-preference-time-btn" 
                        id="js-preference-time-btn-all" 
                        disable="disabled"
                        >
                        <span>Toute la journée</span>
                    </button>
                </div>
            </div>


            <div class="mt-4 row">
                <div class="mx-auto col-md-12">
                    <p class="text-muted">Si vous avez des circonstances spécifiques, vous pouvez laisser une petite note :</p>
                </div>
            </div>
            <div class="row">
                <div class="mx-auto col-md-12">
                    <textarea 
                        class="form-control" 
                        rows="2" 
                        placeholder="Exemple : Je suis disponible mardi entre 18h00 et 19h30..." 
                        id="js-preference-note" 
                        maxlength="150"
                    ></textarea>
                    <p class="mb-0 text-muted text-right" id="js-preference-note-counter">0/150</p>
                </div>
            </div>


            <div class="row">
                <div class="mx-auto col-md-12">
                    <p>Vérifiez :</p>
                </div>
            </div>
            <div class="row">
                <div class="mx-auto col-md-12">
                    <div class="btn btn-block border border-primary">
                        <span id="js-preference-verification">Vous n'avez rien indiqué pour le moment.</span>
                    </div>    
                </div>
            </div>
            <div class="mt-2 row">
                <div class="mx-auto col-md-12">
                    <p class="text-muted">Cliquez sur le bouton 'Enregistrer' uniquement si le texte ci-dessus correspond à ce que vous avez indiqué.</p>
                </div>
            </div>

            
            <button class="mt-4 btn btn-block btn-primary">Enregistrer</button>
        </form>
    </div>




    <div class="mx-1 col-md-3">
        <div class="my-1 row bg-dark text-light rounded">
            <div class="col-12 p-4">
                <h4>Vos disponibilités</h4> 
                <div>
    {% if preferences is empty %}
                    <p>Vous n'avez pas encore renseigné vos disponibilités.</p>
    {% else %}
                    <ul>
        {% for preference in preferences %}
                        <li>{{ preference }}</li>
        {% endfor %}
                    </ul>
    {% endif %}
                </div>
            </div>
        </div>
        <div class="my-1 row bg-dark text-light rounded">
            <div class="col-12 p-4">
                <h4>Vos indisponibilités</h4> 
                <div>
    {% if unavailabilities is empty %}
                    <p>Vous n'avez pas encore renseigné vos indisponibilités.</p>
    {% else %}
                    <ul>
        {% for unavailability in unavailabilities %}
                        <li>{{ unavailability }}</li>
        {% endfor %}
                    </ul>
    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<script src="{{ asset('js/routes/preference/index.js') }}" type="text/javascript"></script>
{% endblock %}
