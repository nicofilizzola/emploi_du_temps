{% extends 'base.html.twig' %}

{% block body %}
<h1 class="text-center">Mes disponibilités</h1>
<div class="mt-4 row justify-content-center">
    <div class="mx-1 p-5 col-md-6 bg-light rounded">
        <form action="{{ path('app_preference_create') }}" method="post">
            <div class="row">
                <div class="mx-auto col-md-12">
                    <p>Je veux renseigner une...</p>
                </div>
            </div>
            <div class="row">
                <div class="mx-auto col-md-12">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="js-preference-btn btn btn-success btn-block p-4" id="js-preference-btn">
                                <input type="radio" 
                                    name="preference_state" 
                                    value="availability" 
                                    hidden="hidden"
                                >
                                <span>Disponibilité</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="js-preference-btn btn btn-danger btn-block p-4" id="js-unavailability-btn">
                                <input type="radio" 
                                    name="preference_state" 
                                    value="unavailability" 
                                    hidden="hidden"
                                >
                                <span>Indisponibilité</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



            <div class="mt-4 row">
                <div class="mx-auto col-md-12 d-flex">
                    <p>Choissisez</p>
                </div>
            </div>
            <div class="row">
                <div class="mx-auto col-md-6 d-flex">
                    <button 
                        type="button" 
                        class="js-preference-onclick-undisable js-preference-weekday-btn mt-2 w-100 rounded d-flex align-items-center justify-content-center btn btn-dark" 
                        id="js-preference-weekday-btn-nonspecific"
                        disabled="disabled" 
                    >
                        <input 
                            type="checkbox" 
                            name="preference_weekday_nonspecific" 
                            value="true" 
                            hidden="hidden"
                        >
                        <span>Une préférence constante</span>
                    </button>
                </div>
         
                <div class="mx-auto col-md-6 d-flex">
                    <button 
                        type="button" 
                        class="js-preference-onclick-undisable js-preference-weekday-btn mt-2 w-100 rounded d-flex align-items-center justify-content-center btn btn-dark" 
                        id="js-preference-weekday-btn-specific"
                        disabled="disabled" 
                    >
                        <input 
                            type="checkbox" 
                            name="preference_weekday_specific" 
                            value="true" 
                            hidden="hidden"
                        >
                        <span>Un jour ou une période spécifique</span>
                    </button>
                </div>
            </div>

           
            <div class="mt-4 swiper-container">
                <div class="swiper-wrapper">
                    <div class="swiper-slide">
                        <div class="row">
                            <div class="mx-auto col-md-12">
                                <p>Choissisez les jours de la semaine :</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="mx-auto col-md-12 d-flex">
                                {% set weekdays = ['Lun', 'Mar', 'Mer', 'Jeu', 'Ven'] %}
                                {% for weekday in weekdays %}
                                    <button 
                                        type="button" 
                                        style="height: 75px" 
                                        class="js-preference-onclick-undisable js-preference-weekday-btn  m-1 w-100 rounded d-flex align-items-center justify-content-center btn btn-dark text-uppercase" 
                                        id="js-preference-weekday-btn-{{ loop.index }}" 
                                        disabled="disabled"
                                    >
                                        <input 
                                            type="checkbox" 
                                            name="preference_weekday_{{ loop.index }}" 
                                            value="true" 
                                            hidden="hidden"
                                        />
                                        <span>{{ weekday }}</span>
                                    </button>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="row">
                            <div class="mx-auto col-md-12 d-flex">
                                <button 
                                    type="button" 
                                    class="js-preference-onclick-undisable js-preference-weekday-btn mt-2 w-100 rounded d-flex align-items-center justify-content-center btn btn-dark" 
                                    id="js-preference-weekday-btn-all" 
                                    disabled="disabled"
                                >
                                    <span>Tous les jours</span>
                                </button>
                            </div>
                        </div>



                        <div class="mt-4 row">
                            <div class="mx-auto col-md-12">
                                <p>Choisissez vos horaires :</p>
                                <p class="text-muted">Si vos disponibilités horaires changent en fonction du jour de la semaine, créez des préférences séparées pour chaque jour de la semaine dont les horaires sont différents.</p>
                                <p class="text-muted">Par exemple : Isabelle enregistre une disponibilité pour tous les lundis de 9h30 à 15h00, et ensuite elle crée une autre pour tous les mercredis de 16h30 à 18h00.</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="mx-auto col-md-12">
                                <div class="row">
                                    {% set times = ['8h00 - 9h30', '9h30 - 11h00', '11h00 - 12h30', '13h30 - 15h00', '15h00 - 16h30', '16h30 - 18h00'] %}
                                    {% for column in times | batch (3) %}
                                    <div class="col-md-6">
                                        {% for time in column %}
                                            <button 
                                                type="button" 
                                                class="js-preference-onclick-undisable btn btn-dark btn-block js-preference-time-btn" 
                                                id="js-preference-time-btn-{{ loop.index }}" 
                                                disabled="disabled"
                                            >
                                                <input 
                                                    type="checkbox" 
                                                    name="preference_time_{{ loop.index }}" 
                                                    value="true"
                                                    hidden="hidden"
                                                />
                                                <span>{{ time }}</span>
                                            </button>
                                        {% endfor %}
                                    </div>
                                    {% endfor %}
                                        
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="mx-auto col-md-12 d-flex">
                                <button 
                                    type="button" 
                                    class="js-preference-onclick-undisable mt-2 w-100 rounded d-flex align-items-center justify-content-center btn btn-dark js-preference-time-btn" 
                                    id="js-preference-time-btn-all" 
                                    disabled="disabled"
                                    >
                                    <span>Toute la journée</span>
                                </button>
                            </div>
                        </div>


                        <div class="mt-4 row">
                            <div class="mx-auto col-md-12">
                                <p class="text-muted">Si vous avez des circonstances spécifiques, vous pouvez laisser une petite note :</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="mx-auto col-md-12">
                                <textarea 
                                    class="form-control" 
                                    rows="2" 
                                    placeholder="Exemple : Je suis disponible mardi entre 18h00 et 19h30..." 
                                    id="js-preference-note" 
                                    maxlength="135"
                                ></textarea>
                                <p class="mb-0 text-muted text-right" id="js-preference-note-counter">0/135</p>
                            </div>
                        </div>
                    </div>


                    <div class="swiper-slide">
                        el pepe gay
                    </div>
                </div>
            </div>


            


            <div class="row">
                <div class="mx-auto col-md-12">
                    <p>Vérifiez :</p>
                </div>
            </div>
            <div class="row">
                <div class="mx-auto col-md-12">
                    <div class="btn btn-block border border-primary">
                        <span id="js-preference-verification">Vous n'avez rien indiqué pour le moment.</span>
                    </div>    
                </div>
            </div>
            <div class="mt-2 row">
                <div class="mx-auto col-md-12">
                    <p class="text-muted">Cliquez sur le bouton 'Enregistrer' uniquement si le texte ci-dessus correspond à ce que vous avez indiqué.</p>
                </div>
            </div>

            
            <button class="mt-4 btn btn-block btn-primary">Enregistrer</button>
        </form>
    </div>




    <div class="mx-1 col-md-3">
        <div class="my-1 row bg-dark text-light rounded">
            <div class="col-12 p-4">
                <h4>Vos disponibilités</h4> 
                <div>
    {% if preferences is empty %}
                    <p>Vous n'avez pas encore renseigné vos disponibilités.</p>
    {% else %}
                    <ul>
        {% for preference in preferences %}
                        <li>{{ preference }}</li>
        {% endfor %}
                    </ul>
    {% endif %}
                </div>
            </div>
        </div>
        <div class="my-1 row bg-dark text-light rounded">
            <div class="col-12 p-4">
                <h4>Vos indisponibilités</h4> 
                <div>
    {% if unavailabilities is empty %}
                    <p>Vous n'avez pas encore renseigné vos indisponibilités.</p>
    {% else %}
                    <ul>
        {% for unavailability in unavailabilities %}
                        <li>{{ unavailability }}</li>
        {% endfor %}
                    </ul>
    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<script src="{{ asset('js/routes/preference/index.js') }}" type="text/javascript"></script>
{% endblock %}
