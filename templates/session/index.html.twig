{% extends 'base.html.twig' %}

{% block body %}
    {% if session is defined and events is defined %}
        <h1 class="mt-5 text-center">Session {{ session.start | date('Y') }} - {{ session.until | date('Y') }}</h1>
        <div class="row mt-4 justify-content-center">  
            <div class="mx-1 p-3 col-md-6 bg-light rounded">
                <div class="swiper-container">
                    <div class="swiper-wrapper">
                        {% set loopCounter = 0 %}
                        {% for monthDays in monthsDays %}
                            {% if monthDays is empty == false %}
                                
                                <form class="swiper-slide px-5 py-4" action="" method="get">
                                    <h2 class="mb-3">{{ monthDays[0].date | date('F') }}</h2>
                                    <table class="calendar w-100">
                                        <thead>
                                            <tr>
                                                <th class="px-3 py-1">DIM</th>
                                                <th class="px-3 py-1">LUN</th>
                                                <th class="px-3 py-1">MAR</th>
                                                <th class="px-3 py-1">MER</th>
                                                <th class="px-3 py-1">JEU</th>
                                                <th class="px-3 py-1">VEN</th>
                                                <th class="px-3 py-1">SAM</th>
                                            </tr>
                                        </thead> 
                                        <tbody>
                                            {% for week in monthDays | batch(7) %} 
                                                <tr>
                                                    {% for day in week %}
                                                        {# separate week and weekend (MAYBE DONT SAVE WEEKEND IN DB) #}
                                                        {% if day.date | date('w') == 0 or day.date | date('w') == 6 %}
                                                            <td class="p-3 day custom-bg-light" id="js-day-{{ loopCounter }}">
                                                                <div>
                                                                    {{ day.date | date('d') }}
                                                                </div>
                                                            </td>
                                                        {% else %}
                                                            {% set loopCounter = loopCounter + 1 %}
                                                            <td class="p-3 day" id="js-day-{{ loopCounter }}">
                                                                <div>
                                                                    {{ day.date | date('d') }}
                                                                </div>
                                                                {% for event in events %}
                                                                    <input type="checkbox" value="{{ loop.index }}" />
                                                                {% endfor %}
                                                            </td>
                                                        {% endif %}
                                                    {% endfor %}
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </form>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <div class="swiper-button-prev"></div>
                    <div class="swiper-button-next"></div>
                </div>
            </div>    
            
            
            <div class="mx-1 p-3 col-md-3 bg-dark rounded">
                <input type="text" placeholder="Chercher un événement..." class="form-control my-4" id="js-session-searchbar">
                <div id="#js-session-events">
                    {% for event in events %}
                        <button class="btn btn-secondary btn-block js-event-button d-flex align-items-center justify-content-between" id="js-event-{{ loop.index }}">
                            <span>{{ event }}</span>
                            <div style="width: 20px; height: 20px" class="event-{{ loop.index }} rounded-circle"></div>
                        </button>
                    {% endfor %}
                </div>
            </div>
        </div>

        <div class="my-5 row">
            <div class="col-md-9 mx-auto">
                <button class="btn btn-primary btn-block" id="js-events-submit">Sauvegarder les changements</button>
            </div>
        </div>

        {# SCRIPTS #}
        <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
        <script>
        // swiper
            const swiper = new Swiper('.swiper-container', {
                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                },
                allowTouchMove: false
            });
        </script>

        <script>
        // searchbar
            var eventBtns = document.querySelectorAll('.js-event-button');
            var searchbar = document.querySelector('#js-session-searchbar');
            searchbar.addEventListener('keyup', function(e){
                eventBtns.forEach(event => {
                    if (event.textContent.toLowerCase().indexOf(searchbar.value.toLowerCase()) == -1){
                        event.classList.add('d-none');
                    } else {
                        if (event.className.indexOf('d-none') !== -1){
                            event.classList.remove('d-none');
                        }
                    }
                });
            });
        </script>

        <script>
        // Assign event
            var assignEventMode = false;
            var assignEventModeCounter = 0;
            var eventSelected = false;
            var eventStartDate, eventEndDate;
            // Activate assignEventMode on EventBtn click
            eventBtns.forEach(element => {
                element.addEventListener('click', function(){
                    eventSelected = element.id.replace( /^\D+/g, '');
                    assignEventMode = true;
                });
            });
            // Assign events to days
            var days = document.querySelectorAll('.day');
            days.forEach(element => {
                element.addEventListener('click', function(){
                    if (assignEventMode) {
                        element.children[eventSelected].checked = true;
                        assignEventModeCounter++;
                        if (assignEventModeCounter == 1){
                            eventStartDate = element.id.replace( /^\D+/g, '');
                        } else if (assignEventModeCounter == 2) {
                            eventEndDate = element.id.replace( /^\D+/g, '');
                            // Check everything between start and end
                            while (eventStartDate + 1 <= eventEndDate){
                                document.getElementById('js-day-' + eventStartDate).children[eventSelected].checked = true;
                                eventStartDate++;
                            }
                            assignEventModeCounter = 0;
                        }
                    }
                 });
            });
            // submit button
            /*var eventSubmitBtn = document.querySelector('#js-events-submit');
            eventSubmitBtn.addEventListener('click', function(){
                document.querySelectorAll('form').forEach(element => {
                    element.submit();
                });
            });*/
        </script>


    {% else %}
        <div class="row mt-5">  
        <div class="col-md-6 mx-auto bg-light rounded p-5"> 
            <h1 class="text-center">Il n'y a pas de session disponible. <a href="{{ path('app_session_create') }}">Cliquez ici pour en créer une !</a></h1>
            </div>
        </div>  
    {% endif %}       

{% endblock %}


