{% extends 'base.html.twig' %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="row">
        <div class="mx-auto col-md-9 bg-light rounded p-5">
            <h1>Inscrivez-vous</h1>
            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword) }}
                {{ form_row(registrationForm.verifyPassword) }}
                {{ form_row(registrationForm.userCode) }}
                {{ form_row(registrationForm.agreeTerms) }}

                <button type="submit" class="btn btn-primary btn-block">Commencer</button>
                <p class="mt-3 text-center">Si vous avez un compte, <a href="{{ path('app_login') }}">connectez-vous en cliquant ici !</a></p>
            {{ form_end(registrationForm) }}

        </div>
    </div>     

{% endblock %}
